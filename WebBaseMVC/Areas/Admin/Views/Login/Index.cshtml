@model WebBaseMVC.Models.CustomModel.LoginModel


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Index</title>
</head>
<body>
    <!-- Bootstrap Core CSS -->
    <link href="@Url.Content("~/Pub/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">   
    <link href="@Url.Content("~/Pub/vendor/metisMenu/metisMenu.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Pub/dist/css/sb-admin-2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Pub/vendor/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css">
    <script src="@Url.Content("~/Pub/vendor/jquery/jquery.min.js")"></script>
  
    <script src="@Url.Content("~/Pub/vendor/bootstrap/js/bootstrap.min.js")"></script>   
    <script src="@Url.Content("~/Pub/vendor/metisMenu/metisMenu.min.js")"></script>
    <script src="@Url.Content("~/Pub/dist/js/sb-admin-2.js")"></script>
    
    
    @using (Html.BeginForm("Index","Login",FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        
        <div class="container">
            
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        
                        <div class="login-panel panel panel-default">
                           
                            <div class="panel-heading">
                                <h3 class="panel-title">Please Sign In</h3>
                            </div>
                            <div class="panel-body">
                                <form role="form">
                                    <fieldset>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.UserName, null, htmlAttributes: new { @class = "form-control", @placeholder = "E-mail", @autofocus = "autofocus" })                                          
                                        </div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.Password, null, htmlAttributes: new { @class = "form-control", @placeholder = "Password", @type = "password"})                                            
                                        </div>
                                        <div class="checkbox">
                                            <label>
                                                @Html.CheckBoxFor(model => model.Remember)
                                               Remember Me
                                            </label>
                                        </div>
                                        <!-- Change this to a button or input when using this as a form -->
                                        <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>                                                                     
                                    </fieldset>
                                </form>
                                <br />
                                @Html.ValidationSummary(false)
                            </div>
                        </div>
                    </div>
                </div>
            </div>           
    }    
    
</body>
</html>
